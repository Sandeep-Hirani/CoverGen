# Copy this file to .env and fill in the appropriate values.

# Which LLM provider to use: "openai" or "together".
LLM_PROVIDER=openai

# API key for the selected provider. Provide at least one.
OPENAI_API_KEY=your-openai-api-key
TOGETHER_API_KEY=your-together-api-key

# Model configuration
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.2

# Paths for resume, template, and output artifacts
CV_PATH=data/cv.txt
LATEX_TEMPLATE=templates/cover_letter.tex.j2
LATEX_ENGINE=xelatex
OUTPUT_DIR=output

# Identity defaults used by `covergen generate` when flags are omitted.
DEFAULT_SENDER_NAME=Your Name
DEFAULT_SENDER_ADDRESS=123 Main Street|City, ST 00000

# Optional phrasing defaults
DEFAULT_OPENING=Dear Hiring Manager
DEFAULT_CLOSING=Sincerely,
DEFAULT_TONE=professional
